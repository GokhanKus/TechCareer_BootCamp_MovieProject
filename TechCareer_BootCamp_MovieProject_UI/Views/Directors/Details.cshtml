@model Director

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Director</h4>
	<hr />
	<dl class="row">
		<div class="col-md-6">

			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.FullName)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.FullName)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DoB)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DoB)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.PlaceOfBirth)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.PlaceOfBirth)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Biography)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Biography)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.CreatedTime)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CreatedTime)
			</dd>
		</div>
		<div class="col-md-6">
			<img class="rounded shadow" width="300" src="/MovieActors/@Model.ImagePath" />
		</div>
	</dl>
</div>

