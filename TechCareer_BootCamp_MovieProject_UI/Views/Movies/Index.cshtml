@model IEnumerable<MovieCardModel>

@section styles {
	<link rel="stylesheet" href="~/css/MovieCard.css" />
}

<div class="row">
	<div class="col-md-2">
		@*buraya film kategorileri eklenecek.*@
		@*buraya filtreleme eklenecek.*@
	</div>

	<div class="col-md-10">
		<div class="row my-3">
			@foreach (var movie in Model)
			{
				<div class="col-md-6 col-lg-4 d-flex">
					<partial name="_MovieCard" model="@movie" />
				</div>
			}
		</div>
	</div>
</div>

