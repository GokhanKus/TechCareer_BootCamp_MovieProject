@model IEnumerable<MovieCardModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>

			<th>
				@Html.DisplayNameFor(model => model.OriginalTitle)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Plot)
			</th>
			<th>
				Movie Image
			</th>

			<th>
				@Html.DisplayNameFor(model => model.ReleaseDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Score)
			</th>
			<th>Operations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>

				<td>
					@Html.DisplayFor(modelItem => item.OriginalTitle)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Plot)
				</td>
				<td>
					@* <img class="border border-light rounded" src="/MovieActors/@item.PosterPath" alt="@item.PosterPath" width="250" /> *@
					<img class="border border-light rounded" src="~/MoviePosters/@item.PosterPath" width="250" alt="@item.PosterPath" />
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.ReleaseDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Score)
				</td>

				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
