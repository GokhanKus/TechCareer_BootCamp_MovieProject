<div class="movie-card">
	<div class="movie-card__image">
		<img src="~/MoviePosters/@Model.PosterPath?" width="220"/>
		<div class="movie-card__overlay"></div>
	</div>
	<div class="movie-card__content">
		<h2 class="movie-card__title">@Model.OriginalTitle</h2>
		<div class="movie-card__info">
			<p>IMDB: @Model.Score</p>
			<p>@Model.ReleaseDate - @string.Join(" & ", Model.Genres.Select(g => g.Name))</p>
		</div>
		<p class="movie-card__desc">@Model.Plot</p>
		<div class="btn-group">
			<a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-details" type="button">Details</a>
			<button class="btn btn-favorite" type="button">Favorite</button>
		</div>
	</div>
</div>