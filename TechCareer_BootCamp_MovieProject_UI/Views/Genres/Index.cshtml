@model IEnumerable<Genre>

@{
	ViewData["Title"] = "Index";
}

<h1>Genres</h1>

<p>
	<a class="btn btn-primary" asp-action="Create"><i class="fa fa-solid fa-plus"></i> Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreatedTime)
			</th>
			<th>Operations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreatedTime)
				</td>
				<td>
					<a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-solid fa-edit"></i> Edit</a> |
					<a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i> Details</a> |
					<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i> Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
