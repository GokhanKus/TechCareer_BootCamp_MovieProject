@model ActorViewModelWithDetails

@{
	ViewData["Title"] = "Details";
}

@section styles {
	<link rel="stylesheet" href="~/css/DarkMode.css" />
}

<h1>Details</h1>

<div>
	<h4>Actor</h4>
	<hr />
	<dl class="row">
		<div class="col-md-6">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.FullName)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.FullName)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Movies)
			</dt>
			<div class="movie-container">
				@foreach (var movie in Model.Movies)
				{
					<div class="movie-item">
						<a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
							<h4>@movie.OriginalTitle</h4>
							<img class="rounded shadow" width="150" src="~/MoviePosters/@movie.PosterPath" />
						</a>
					</div>
				}
			</div>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.DoB)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.DoB)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.PlaceOfBirth)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.PlaceOfBirth)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Biography)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Biography)
			</dd>
		</div>
		<div class="col-md-6">
			<img class="rounded shadow" width="300" src="/MovieActors/@Model.ImagePath" />
		</div>

	</dl>
</div>
