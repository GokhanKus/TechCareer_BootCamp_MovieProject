@model RegisterViewModel

<div class="text-center my-4">
	<h6 class="display-6">
		<i class="fa-solid fa-user-plus text-white bg-secondary p-3 rounded-5"></i>
		<br />
		Register
	</h6>
</div>

<div class="row">
	<div class="col-md-3">
	</div>
	<div class="col-md-6">
		<form method="post" asp-controller="Account" asp-action="Register">
			<div>
				<div class="text-danger" asp-validation-summary="All"></div>
			</div>
			<div class="form-group my-3">
				<label asp-for="UserName"></label>
				<input class="form-control" asp-for="UserName" />
			</div>

			<div class="form-group my-3">
				<label asp-for="Email"></label>
				<input type="Email" class="form-control" asp-for="Email" />
			</div>
			<div class="form-group my-3">
				<label asp-for="Password"></label>
				<input class="form-control" asp-for="Password" /> @*<input type="Password" da yazılabilir ya da model uzerinden [DataType.password]*@
			</div>
			<div class="form-group my-3">
				<label asp-for="ConfirmPassword"></label>
				<input class="form-control" asp-for="ConfirmPassword" />
			</div>

			<div class="form-group my-3 d-flex justify-content-center">
				<button type="submit" class="btn btn-primary">
					<i class="fa-solid fa-user-plus"></i>
					Register
				</button>
			</div>
		</form>
	</div>
	<div class="col-md-3">
	</div>
</div>