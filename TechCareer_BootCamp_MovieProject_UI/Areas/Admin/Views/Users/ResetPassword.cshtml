@model ResetPasswordViewModel

<div class="text-center my-4">
	<div class="lead display-6 border-bottom">Reset Password @(Model?.UserName)</div>
</div>

<form method="post" asp-area="Admin" asp-controller="Users" asp-action="ResetPassword">

	<div class="text-danger" asp-validation-summary="All"></div>

	@* <input type="hidden" name="UserName" value="@Model.UserName" /> *@

	<input type="hidden" asp-for="UserName" />

	<div class="form-group my-3">
		<label asp-for="Password"></label>
		<input asp-for="Password" class="form-control" />
	</div>
	<div class="form-group my-3">
		<label asp-for="ConfirmPassword"></label>
		<input asp-for="ConfirmPassword" class="form-control" />
	</div>
	<div class="btn-group">
		<button class="btn btn-primary" type="submit">
			<i class="fa fa-solid fa-key"></i>
			Reset Password
		</button>
		<a class="btn btn-outline-primary" asp-action="Index">
			<i class="fa fa-solid fa-users"></i>
			Users
		</a>
	</div>
</form>