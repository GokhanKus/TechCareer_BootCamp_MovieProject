﻿ <div class="row">

	<div class="col-md-6 col-lg-4 my-3">
		<div class="card bg-primary text-white" style="width: 20rem;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Movies</h5>
				<h3 class="display-3">
					<i class="fa-solid fa-film fa-lg"></i> @await Component.InvokeAsync("MovieCount")
				</h3>
				<a class="card-link text-white" asp-controller="Movies" asp-action="Index">Movies</a>
				<a class="card-link text-white" asp-controller="Movies" asp-action="Create">New Movie</a>
			</div>
		</div>
	</div>

	<div class="col-md-6 col-lg-4 my-3">
		<div class="card bg-info text-white" style="width: 20rem;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Actors</h5>
				<h3 class="display-3">
					<i class="fa-solid fa-circle-user fa-lg"></i> @await Component.InvokeAsync("ActorCount")
				</h3>
				<a class="card-link text-white" asp-controller="Actors" asp-action="Index">Actors</a>
				<a class="card-link text-white" asp-controller="Actors" asp-action="Create">New Actor</a> <i class="fa-solid fa-person-circle-plus fa-lg"></i>
			</div>
		</div>
	</div>

	<div class="col-md-6 col-lg-4 my-3">
		<div class="card bg-warning text-white" style="width: 20rem;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Directors</h5>
				<h3 class="display-3">
					<i class="fa-solid fa-circle-user fa-lg"></i> @await Component.InvokeAsync("DirectorCount")
				</h3>
				<a class="card-link text-white" asp-controller="Directors" asp-action="Index">Directors</a>
				<a class="card-link text-white" asp-controller="Directors" asp-action="Create">New Director</a> <i class="fa-solid fa-person-circle-plus fa-lg"></i>
			</div>
		</div>
	</div>

	<div class="col-md-6 col-lg-4 my-3">
		<div class="card bg-danger text-white" style="width: 20rem;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Genres</h5>
				<h3 class="display-3">
					<i class="fa-solid fa-list fa-lg"></i> @await Component.InvokeAsync("GenreCount")
				</h3>
				<a class="card-link text-white" asp-controller="Genres" asp-action="Index">Genres</a>
				<a class="card-link text-white" asp-controller="Genres" asp-action="Create">New Genre</a>
			</div>
		</div>
	</div>

	<div class="col-md-4 my-3">
		<div class="card bg-success text-white" style="width: 20rem;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Users</h5>
				<h3 class="display-3">
					<i class="fa-solid fa-circle-user fa-lg"></i> <vc:user-count></vc:user-count> @*alternatif yazim*@
				</h3>
				<a class="card-link text-white" asp-controller="Users" asp-action="Index">Users</a>
				<a class="card-link text-white" asp-controller="Users" asp-action="Create">New User</a> <i class="fa-solid fa-person-circle-plus fa-lg"></i>
			</div>
		</div>
	</div>

</div>
